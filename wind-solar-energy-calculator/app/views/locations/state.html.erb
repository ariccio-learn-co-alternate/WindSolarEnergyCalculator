<form action="/solar_input" method="get" >
    <input type="hidden" name="authenticity_token" value="token_value">
    <select name="city">
        <% @wind_city_options.map do |c| %>
      
            <%if c.state == @state %>
                <option value= "<%=c.city%>" >
                <%=c.city%>
            </option>
            <% end %>
        <% end %>
    </select>
    <input type="submit" value="WAS Compare Wind and Solar, NOW Proceed and Input Solar Details">
</form>

