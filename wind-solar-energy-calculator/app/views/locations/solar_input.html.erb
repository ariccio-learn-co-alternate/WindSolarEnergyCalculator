
<h1>Solar site specification</h1>
<%=form_tag '/solars' do%>
    <%=select_tag "solar_site", options_for_select(@sites.collect{|s| [s.address_repr, s.id]})%>
    <%=label_tag 'System Capacity (kW)'%>
    <%=number_field_tag 'solar[capacity]', 5, min:0.5, max:5000, step:0.1%>
    <%=label_tag 'tilt'%>
    <%=number_field_tag 'solar[tilt]', 40, min:0, max:90%>
    <%=submit_tag 'create solar site'%>
<%end%>



<%if user.location.count{|x| x.solar != nil} > 0%>
<%user.location.each do |loc|%>
    <li><%=(link_to loc.solar.one_line_repr, solars_show_url(loc.solar.id)) unless loc.solar == nil%></li>
<%end%>
<%elsif user.location.length > 0%>
<%user.location.each do |loc|%>
    <li><%=(link_to "Create solar power resources for #{loc.address_repr}", solars_new_path(loc.id)) unless loc == nil%></li>
<%end%>
<%else%>
No locations?
<%end%>

