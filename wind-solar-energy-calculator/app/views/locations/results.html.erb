    <div id="header">
                <div class="title-bar">
                <h1>Chosen Location: <%=@city.capitalize%>, <%=@state%> (<%=@site_id%>)</h1>
                </div>
                <br>
    </div>
    <div class="flex-container6">
        <div id="main">
                    <div class = "column-span">
                    <div class = "flex6">
                        <br><br>
                        <div class="circular--landscape">
                              
                                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6c/Badaia_-_Parque_E%C3%B3lico_-BT-_01.jpg/639px-Badaia_-_Parque_E%C3%B3lico_-BT-_01.jpg" style="width: 350px;" alt="OJ" >
                                        <!-- 639 x 480 px -->
