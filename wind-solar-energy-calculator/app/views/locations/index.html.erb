<!-- Show all saved & prior locations -->

<div id="wrap">
        <p>
        <%if user.location.length > 0%>
            <%=user.name%>'s locations
                <table id="locations">
                    <tr>
                        <th>Location</th>
                        <th>Capacity (kW)</th>
                        <th>Tilt (degrees)</th>
                        <th>Annual AC power (kWh)</th>
                        <th>Annual solar radiation(kWh/mÂ²/month)</th>
                    </tr>
                    <%user.location.each do |loc|%>
                        <tr>
                            <td>
                                <%= link_to(loc.address_repr, location_results_show_path(loc.id))%>
                            </td>
                            <%if loc.solar != nil%>
                            <td><%=loc.solar.capacity%></td>
                            <td><%=loc.solar.tilt%></td>
                            <td><%=loc.solar.ac_annual.truncate(2)%></td>
                            <td><%=loc.solar.solrad_annual.truncate(2)%></td>"
                            <%end%>
                        </tr>
                    <%end%>
                </table>    
        <%else%>
        You have no locations saved! Please create one.
        <%end%>
        </p>


        <!-- states_path = where redirecting to after form submitted -->

        <%= form_tag states_path, :method => :get, :class => 'form-search' do %>
        <div class="input-append">
            <%= select_tag("state", options_for_select(@states)  ) %>

        
            <%= submit_tag "submit" %>
        </div>
        <% end %>


</div>

