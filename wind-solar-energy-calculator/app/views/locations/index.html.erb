<!-- Show all saved & prior locations -->


<p>
<%=user.name%>'s locations
    <table>
        <%=raw Solar.table_repr_columns%>
        <%user.location.each do |loc|%>
            <tr>
                <td>
                    <%= link_to(loc.address_repr, location_results_show_path(loc.id))%>
                </td>
                <%=raw loc.solar.table_repr_row unless loc.solar == nil%>
            </tr>
        <%end%>
    </table>    
</p>


<!-- states_path = where redirecting to after form submitted -->

 <%= form_tag states_path, :method => :get, :class => 'form-search' do %>
 <div class="input-append">
    <%= select_tag("state", options_for_select(@states)  ) %>

  
    <%= submit_tag "submit" %>
 </div>
<% end %>




